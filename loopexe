let nome;
let senha;

do {
  nome = prompt("Digite seu nome de usuário:");
  senha = prompt("Digite sua senha:");

  if (senha === nome) {
    alert("Erro! Senha incorreta, Tente novamente.");
  }
} while (senha === nome);

alert("Bem vindo!" + nome);

